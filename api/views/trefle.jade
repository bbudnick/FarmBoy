extends layout

block content
  h1= title
  p #{title}

head
  title Show Image from JSON using jQuery
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js')
  style.
    table,
    input {
    width: 300px;
    font: 17px Calibri;
    }
    table,
    th,
    td {
    border: solid 1px #DDD;
    border-collapse: collapse;
    padding: 2px 3px;
    text-align: center;
    }
    table img {
    border: none;
    width: 51px;
    height: 51px;
    }
p
  input#btShowImage(type='button' value='Click to Show Images')
#showData
script.
  $(document).ready(function () {
  $('#btShowImage').click(function () {
  $.getJSON(#{plantyData}, function (data) {
  var arrItems = [];      // The array to store JSON items.
  $.each(data.data, function (index, value) {
  arrItems.push(value);       // Push values in the array.
  });
  // Extract values for the table header.
  var col = [];
  for (var i = 0; i < arrItems.length; i++) {
  for (var key in arrItems[i]) {
  if (col.indexOf(key) === -1) {
  col.push(key);
  }
  }
  }
  // Create a <table> element dynamically.
  // Ref: https://www.encodedna.com/javascript/populate-json-data-to-html-table-using-javascript.htm
  var table = document.createElement("table");
  var tr = table.insertRow(-1);                   // Table row.
  for (var i = 0; i < col.length; i++) {
  var th = document.createElement("th");      // Table header.
  th.innerHTML = col[i];
  tr.appendChild(th);
  }
  // Add JSON data to the table as rows.
  for (var i = 0; i < arrItems.length; i++) {
  tr = table.insertRow(-1);
  for (var j = 0; j < col.length; j++) {
  var tabCell = tr.insertCell(-1);
  if (j === 11) {     //where column header is image_url
  // Create an <img> element show the images.
  var img = document.createElement('img');
  img.src = arrItems[i].image_url;   // The image source from JSON array.
  tabCell.appendChild(img);
  }
  else
  tabCell.innerHTML = arrItems[i][col[j]];
  }
  }
  // Finally, add the newly created <table> with data to a container.
  var divContainer = document.getElementById("showData");
  divContainer.innerHTML = "";
  divContainer.appendChild(table);
  });
  });
  });